{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Тип дохода</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>№</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

	<ul class="record_actions btn-group nav-pills">
		<li>
			<a class = "btn btn-inverse" href="{{ path('income') }}">
				Перейти к списку
			</a>
		</li>
		<li>
			<a class = "btn btn-primary" href="{{ path('income_edit', { 'id': entity.id }) }}">
				Изменить
			</a>
		</li>
		<li>{{ form(delete_form) }}</li>
	</ul>
{% endblock %}
