{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список типов доходов</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>№</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('income_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul class="record_actions btn-group nav-pills">
                    <li>
                        <a class = "btn btn-info" href="{{ path('income_show', { 'id': entity.id }) }}">Показать</a>
                    </li>
                    <li>
                        <a class = "btn btn-primary" href="{{ path('income_edit', { 'id': entity.id }) }}">Изменить</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="record_actions btn-group nav-pills">
        <li>
            <a class = "btn btn-success" href="{{ path('income_new') }}">
                Добавить
            </a>
        </li>
    </ul>
{% endblock %}
