{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список членов семьи</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>№</th>
                <th>Имя</th>
                <th>Статус</th>
                <th>e-mail</th>
                <th>День рождения</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.email }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul class="record_actions btn-group nav-pills">
                    <li>
                        <a class = "btn btn-info" href="{{ path('user_show', { 'id': entity.id }) }}">Показать</a>
                    </li>
                    <li>
                        <a class = "btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">Изменить</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

	<ul class="record_actions btn-group nav-pills">
        <li>
            <a class = "btn btn-success" href="{{ path('user_new') }}">
                Добавить
            </a>
        </li>
    </ul>
{% endblock %}
